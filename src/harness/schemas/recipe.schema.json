{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-purple-ops.local/schemas/recipe.schema.json",
  "title": "AI Purple Ops Recipe",
  "type": "object",
  "required": ["version", "metadata", "config", "execution"],
  "additionalProperties": true,
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "metadata": {
      "type": "object",
      "required": ["name", "lane"],
      "additionalProperties": true,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "lane": { "type": "string", "enum": ["safety", "security", "compliance"] },
        "framework": { "type": "string" },
        "author": { "type": "string" },
        "last_updated": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": ["string", "number", "boolean", "null", "object", "array"] }
        }
      }
    },
    "config": {
      "type": "object",
      "required": ["adapter"],
      "additionalProperties": true,
      "properties": {
        "adapter": { "type": "string", "minLength": 1 },
        "seed": { "type": ["integer", "number", "string"] },
        "output_dir": { "type": "string" },
        "model": { "type": "string" }
      }
    },
    "execution": {
      "type": "object",
      "required": ["suites"],
      "additionalProperties": true,
      "properties": {
        "suites": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "benchmarks": {
          "type": "array",
          "items": { "type": "string" }
        },
        "detectors": {
          "type": "array",
          "items": { "type": "object", "additionalProperties": true }
        },
        "evaluators": {
          "type": "array",
          "items": { "type": "object", "additionalProperties": true }
        },
        "tools": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["tool"],
            "additionalProperties": true,
            "properties": {
              "tool": { "type": "string", "minLength": 1 },
              "enabled": { "type": "boolean" },
              "config": { "type": "object", "additionalProperties": true }
            }
          }
        },
        "policies": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "reports": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "path"],
            "additionalProperties": true,
            "properties": {
              "type": { "type": "string", "minLength": 1 },
              "path": { "type": "string", "minLength": 1 }
            }
          }
        },
        "evidence_pack": {
          "type": "object",
          "required": ["path"],
          "additionalProperties": true,
          "properties": {
            "path": { "type": "string", "minLength": 1 },
            "include": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "compliance_artifacts": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "gate": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": { "type": "boolean" },
        "fail_on": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "parameters": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
